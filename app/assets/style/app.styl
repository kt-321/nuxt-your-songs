body, html
    @extend .zero-space
    font-family: $font-face;
    font-size: $font-normal
    color: $text-color
    background-color: $page-background-color
// ヘッダー系マージンのリセット
h1, h2, h3, h4, h5, h6
    @extend .zero-space
    font-weight: normal
// ヘッダー
header
    position fixed
    width 100vw
    z-index 999
    background-color #fff
    border-bottom 1px solid #D8D8D8
// リストレイアウトをリセット
ul, ol
    @extend .zero-space
    list-style: none
    li
        @extend .zero-space
        line-height: 170%
// pタグのマージンリセット
p
    @extend .zero-space
    line-height: 160%
// preタグのマージンリセット
pre
    @extend .zero-space
// リンクカラーの設定
a
    color: $primary-color
    text-decoration: none
// テーブル
.table
    width: 100%
    border-collapse: collapse
    th, td
        border: 1px solid $dark-border-color
        padding: 6px 8px
        font-size: 13px
        font-weight: normal
        text-align: left
    thead tr
        background: $primary-color-gradation
        th
            color: #fff
    tr.selected
        td
            background-color: $highlight-color
    &.primary
        thead tr
            background: $primary-bg-color
            th
                color: #111
    &.no-border
        th, td
            border: 0
            border-bottom: 1px solid $dark-border-color
    &.head-center
        tr
            text-align: center
    &.data-center
        td
            text-align: center
    &.scroll
        min-width: 100%
        display: block
        overflow-x: scroll
        white-space: nowrap
        -webkit-overflow-scrolling: touch
// タブ
.tabs
    display: flex
    flex-flow: row nowrap
    .tab
        margin-right: 4px
        padding: 8px 16px
        background-color: #fff
        color: $primary-color
        border: 1px solid $light-border-color
        border-bottom: 0
        border-top-left-radius: 4px
        border-top-right-radius: 4px
        cursor: pointer
        &:hover
            opacity: 0.8
        &.active
            background-color: $primary-color
            color: #fff
.button
    display: inline-block
    padding: 6px 8px
    font-size: 14px
    font-weight: bold
    border: 1px solid transparent
    border-radius: 20px
    text-decoration: none
    color: $text-color
    &:hover
        text-decoration: underline
    &.primary
        padding: 6px 16px
        background-color: $primary-color
        color: #fff
        &:hover
            text-decoration: none
            background-color: #fff
            color: $primary-color
            border-color: $primary-color
    &.secondary
        padding: 6px 16px
        background-color: $secondary-color
        color: #fff
        &:hover
            text-decoration: none
            background-color: #fff
            color: $secondary-color
            border-color: $secondary-color
    &.yellow
        padding: 6px 16px
        background-color: $yellow-color
        color: #fff
        &:hover
            text-decoration: none
            background-color: #fff
            color: $yellow-color
            border-color: $yellow-color
    &.white
        padding: 6px 16px
        background-color: $white-color
        color: $primary-color
        &:hover
            text-decoration: none
            background-color: $primary-color
            color: $white-color
            border-color: $white-color
.actions
    padding: 24px
    text-align: center
    a
        text-decoration: none
        color: $text-color
        font-weight: bold
        font-size: 14px
        &:after
            content: ' | '
            font-size: 16px
            margin-left: 8px
            margin-right: 8px
        &:last-child
            &:after
                content: ''
.tag
    padding: 3px 5px
    margin-left: 4px
    border-radius: 2px
    font-size: 6px
    color: #fff
    background-color: #ddd
    // border-radius: 10px
    &.video
        background-color: #d66
        border-radius: 10px
    &.description
        background-color: $primary-color
        border-radius: 10px
    &.self
        background-color: $yellow-color
.badge
    position: absolute !important
    right: -8px
    top: -12px
    background-color: rgba(255, 0, 0, 0.5) !important
    color: #fff !important
    border-radius: 12px
    width: 24px !important
    height: 24px !important
    margin: 0 !important
    padding: 0 !important
    text-align: center !important
    line-height: 24px